<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_margin="16dp">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <View style="@style/Divider"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/oldpassWrapper">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password"
                android:id="@+id/et_oldpass"
                android:inputType="textPassword"
                android:textSize="24sp"
                android:gravity="center"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/newpass1Wrapper">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textSize="24sp"
                android:gravity="center"
                android:id="@+id/et_newpass1"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/newpass2Wrapper">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Re Enter new Password"
                android:textSize="24sp"
                android:inputType="textPassword"
                android:gravity="center"
                android:id="@+id/et_newpass2"/>

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:id="@+id/btn_cancel"
            android:background="@drawable/btn_resourse"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_weight="2"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:id="@+id/btn_change_pass"
            android:background="@drawable/btn_resourse"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>