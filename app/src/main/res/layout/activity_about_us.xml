<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maple_background"
    tools:context="com.example.sif.sparkle.AboutUsActivity">

    <TextView
        android:id="@+id/txt_abc"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="italic|bold"
        android:textColor="@color/colorWhite"
        android:text="A b o u t   U s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_aboutus_logo"
        android:layout_below="@+id/txt_abc"
        android:src="@drawable/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"/>

    <TextView
        android:layout_below="@+id/img_aboutus_logo"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shop Address"/>



</RelativeLayout>
